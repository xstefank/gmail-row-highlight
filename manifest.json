{
  "manifest_version": 2,

  "name": "Gmail row highlighter",
  "description": "This extension is highlighting gmail rows.",
  "version": "1.1",

  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["mutation-summary.js", "content.js"]
    }
  ],

  "browser_action": {
    "default_icon": "gmail.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "*://*.google.com/*"
  ],

  "web_accessible_resources": [
  ]

}
